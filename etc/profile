# /etc/profile  script for sh login

trap "" 1 2 3		 # Ignore signals SIGHUP SIGINT SIGQUIT
# Set preferred control characters
stty erase '^H' intr '^C' kill '^U' quit '^\' eof '^D' echoe echok tab3
umask 002		 # Set file creation mask
PATH=/bin:/usr/bin:/etc  # Set search path
TZ=`cat /etc/TZ`	 # Set local time zone
LANG=USA		 # Set country code
DATE="MM/DD/YY hh:mm:ss" # Set date format
export PATH LOGNAME TZ LANG DATE
case "$0" in
-sh | -rsh)
	trap : 1 2 3
	# Display message of the day
	cat /etc/motd
	trap "" 1 2 3
	# Inform user of new mail
	if mail -e
	then
		echo "you have mail"
	fi
	# Display news
	if [ $LOGNAME != root ]
	then
		news -n
	fi
	;;
-su)
	:
	;;
esac
trap 1 2 3
