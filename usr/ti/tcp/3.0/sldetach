# shell file to emulate old sldetach command
#

if [ $# != 1 ]; then
	echo "usage: sldetach interface"
	exit 1
fi

who=`id | cut -f1 -d' '`
name=`id | cut -f2 -d'(' | cut -f1 -d')'`
if [ "$name" != "root" ]; then
	echo "$0: not super-user"
	exit 1
fi

if [ ! -r /usr/spool/locks/slippid.$1 ]; then
	echo "sldetach: /usr/spool/locks/slippid.$1 is not readable"
	exit 1
fi
set +e
if [ -n "`ls /usr/spool/locks/sliptty.* 2>/dev/null" ]; then
	file=`grep -l "$1"$ /usr/spool/locks/sliptty.* 2>/dev/null`
	if [ -n "$file" ]; then
		rm -f $file
	fi
fi
set -e

ifconfig $1 inet detach

kill `cat /usr/spool/locks/slippid.$1`

#version = "@(#)sldetach:	TI-Sys-V-3.2 TCP/IP version 3.0.0	DATE: 03/14/93";
