# cshf	sum--file checksum and block count 
#	@(#)SUM.sh	1.1  87/03/09
#
onintr end

prompt "^SUM -- PRINTS CHECKSUM AND BLOCK COUNT OF A FILE"\
       "^Input File Name:" _input_file acnm $_input_file\
       "^Use an Alternate Algorithm:" rflag yesno n\
       "^#$*"

if ($abort) goto end
if ($rflag == "y") set ropt = -r
echo "=== SUM COMMAND EXECUTING ==="
echo sum $ropt $_input_file
sum $ropt $_input_file
endif

end:
unset *opt *flag
