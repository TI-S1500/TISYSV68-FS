# cshf  at -- execute commands at a later time 
#
#	@(#)AT.sh	1.3 (TI) 87/12/10
#
onintr end

prompt "^AT -- EXECUTES COMMANDS AT A LATER TIME"\
	"^*Input File Name:" _input_file acnm $_input_file\
	"^Time:" when string\
	"^#$*"

if ($abort) goto end

echo "=== AT COMMAND EXECUTING ==="
if ($_input_file != "") then
	echo at $when "<"$_input_file
	at $when <$_input_file
else
	echo at $when 
	at $when 
endif

#clean up when
end:
unset when 
